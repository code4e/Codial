

<h1>
    <%= heading %>
</h1>

<form action="/users/create" method="POST">
    <input type="text" name="name" placeholder="Enter Your Name" required>
    <input type="email" name="email" placeholder="Enter Your Email Here" required>
    <input type="password" name="password" placeholder="Enter Password e.g. abc@123" id="password" required>
    <input type="password" name="confirmPassword" placeholder="Confirm Password" id="do-not-send" required>
    <button type="submit" class="submit-btn">Sign Up new user</button>
</form>

<script src="/js/user_sign_up.js"></script>

